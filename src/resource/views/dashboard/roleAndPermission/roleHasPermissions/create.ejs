<div class="row">
  <div class="col-lg-9 col-12 mx-auto">
    <div class="card card-body mt-4">
      <h6 class="mb-0">New Role and Permission</h6>
      <p class="text-sm mb-0">Create new Role and Permission</p>
      <hr class="horizontal dark my-3">
      <form action="/role-has-permission/add" method="POST">
        <label class="form-label ">Role Name</label>
        <select class="form-control choices-multiple-remove-button" name="roleId" id="roleId" required>
          <% roles.forEach(role => { %>
          <option value="<%= role._id %>"><%= role.name %></option>
          <% }); %>
        </select>

        <label class="mt-4 form-label">Permission Name</label>
        <select class="form-control choices-multiple-remove-button" name="permissionId" id="permissionId" required>
          <% permissions.forEach(permission => { %>
          <option value="<%= permission._id %>"><%= permission.name %> - <%= permission.guardName %></option>
          <% }); %>
        </select>

        <div class="d-flex justify-content-end mt-4">
          <button type="button" name="button" class="btn btn-light m-0">Cancel</button>
          <button type="submit" name="button" class="btn bg-gradient-info m-0 ms-2">Create Role and Permission</button>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/public/assets/js/plugins/choices.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (document.querySelector('.datetimepicker')) {
      flatpickr('.datetimepicker', {
        allowInput: true
      });
    }

    const choiceElements = document.querySelectorAll('.choices-multiple-remove-button');
    choiceElements.forEach(element => {
      new Choices(element, {
        removeItemButton: true
      });
    });
  });
</script>