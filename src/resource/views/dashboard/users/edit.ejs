<div class="row">
  <div class="col-lg-9 col-12 mx-auto">
    <div class="card card-body mt-4">
      <h6 class="mb-0">Edit Users</h6>
      <p class="text-sm mb-0">Edit Users</p>
      <hr class="horizontal dark my-3">
      <form action="/users/edit/<%= user._id %>" method="POST">
        <label class="form-label ">UserName</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" placeholder="UserName..." required>

        <label class="mt-4 form-label">Password (leave blank to keep current password)</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="a-A !-# 1-9">

        <div class="row my-3">
          <div class="col-6">
            <label class="form-label">Employee</label>
            <select id="employee" class="form-control choices-multiple-remove-button" name="employee" required>
              <% employees.forEach(employee => { %>
              <option value="<%= employee._id %>" <%= user.employee._id.equals(employee._id) ? 'selected' : '' %>><%= employee.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-6">
            <label class="form-label">Role</label>
            <select id="role" name="role" class="form-control choices-multiple-remove-button" required>
              <% roles.forEach(role => { %>
              <option value="<%= role._id %>" <%= user.role._id.equals(role._id) ? 'selected' : '' %>><%= role.name %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <button type="button" name="button" class="btn btn-light m-0">Cancel</button>
          <button type="submit" name="button" class="btn bg-gradient-info m-0 ms-2">Create Users</button>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/public/assets/js/plugins/choices.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (document.querySelector('.datetimepicker')) {
      flatpickr('.datetimepicker', {
        allowInput: true
      });
    }

    const choiceElements = document.querySelectorAll('.choices-multiple-remove-button');
    choiceElements.forEach(element => {
      new Choices(element, {
        removeItemButton: true
      });
    });
  });
</script>